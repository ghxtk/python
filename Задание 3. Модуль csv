import csv

with open('task19.csv', newline='', encoding='windows-1251') as f_in:
    reader = csv.DictReader(f_in, delimiter=';')
    k = 0
    #На какое суммарное расстояние были произведены перевозки с 7 по 9 октября?
    sum_rasst = 0
    #Какова средняя масса груза при автоперевозках, осуществлённых из города Осинки?
    sr_from_osin = 0
    count_from_osin = 0
    #Какой суммарный расход бензина был при осуществлении перевозок с 1 по 3 октября?
    sum_benz = 0
    #Какова средняя масса груза при автоперевозках, осуществлённых в город Березки?
    sr_to_berez = 0
    count_to_berez = 0
    for x in reader:
        if int(x['Дата'][0]) >= 7 and int(x['Дата'][0]) <= 9:
            sum_rasst += int(x['Расстояние'])

        if x['Пункт отправления'] == 'Осинки':
            count_from_osin += 1
            sr_from_osin += int(x['Масса груза'])

        if int(x['Дата'][0]) >= 1 and int(x['Дата'][0]) <= 3:
            sum_benz += int(x['Расход бензина'])

        if x['Пункт назначения'] == 'Березки':
            count_to_berez += 1
            sr_to_berez += int(x['Масса груза'])
            
print('Суммарное расстояние, на которое были произведены перевозки с 7 по 9 октября: ', sum_rasst)
print('Средняя масса груза при автоперевозках, осуществлённых из города Осинки: ', sr_from_osin//count_from_osin)
print('Суммарный расход бензина при осуществлении перевозок с 1 по 3 октября: ', sum_benz)
print('Средняя масса груза при автоперевозках, осуществлённых в город Березки: ', sr_to_berez//count_to_berez)
